<Page
    x:Class="Tomato.TomatoMusic.Shell.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Tomato.TomatoMusic.Shell.Views"
    xmlns:localViewModels="using:Tomato.TomatoMusic.Shell.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Tomato.Uwp.Mvvm.Controls"
    xmlns:cal="using:Caliburn.Micro"
    mc:Ignorable="d"
    cal:Bind.Model="{x:Bind ViewModel}">
    <Page.Resources>
        <ResourceDictionary>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <controls:HamburgerMenu>
            <controls:HamburgerMenu.Pane>
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Width="40" Height="40" Symbol="Library"/>
                            <TextBlock VerticalAlignment="Center">音乐库</TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Width="40" Height="40" Symbol="MusicInfo"/>
                            <TextBlock VerticalAlignment="Center">默认</TextBlock>
                        </StackPanel>
                        <Rectangle Margin="5" Fill="#eee" Height="1" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1">
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Width="40" Height="40" Symbol="Add"/>
                            <TextBlock VerticalAlignment="Center">添加播放列表</TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Width="40" Height="40" Symbol="MusicInfo"/>
                            <TextBlock VerticalAlignment="Center">我喜欢</TextBlock>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Row="2">
                        <Rectangle Margin="5" Fill="#eee" Height="1" HorizontalAlignment="Stretch"/>

                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Width="40" Height="40" Symbol="Setting"/>
                            <TextBlock VerticalAlignment="Center">设置</TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </controls:HamburgerMenu.Pane>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Frame x:Name="ContentFrame"/>
                <!-- 音乐控制面板 -->
                <Grid>
                    
                </Grid>
            </Grid>
        </controls:HamburgerMenu>
    </Grid>
</Page>
