<Page
    x:Class="Tomato.TomatoMusic.Shell.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Tomato.TomatoMusic.Shell.Views"
    xmlns:localViewModels="using:Tomato.TomatoMusic.Shell.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Tomato.Uwp.Mvvm.Controls"
    xmlns:cal="using:Caliburn.Micro"
    mc:Ignorable="d"
    cal:Bind.Model="{x:Bind ViewModel}">
    <Page.Resources>
        <ResourceDictionary>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <controls:HamburgerMenu>
            <controls:HamburgerMenu.Pane>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Width="40" Height="40" Symbol="Admin"/>
                            <TextBlock VerticalAlignment="Center">Admin</TextBlock>
                        </StackPanel>
                        <Rectangle Margin="5" Fill="#eee" Height="1" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Grid>
            </controls:HamburgerMenu.Pane>
            <Grid>

            </Grid>
        </controls:HamburgerMenu>
    </Grid>
</Page>
